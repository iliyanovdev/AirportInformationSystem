@using AirportInformationSystem.Web.ViewModels.Ticket
@model ConfirmBuyTicketViewModel
@{
    ViewData["Title"] = "Confirm Ticket Purchase";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Confirm Your Ticket</h2>

    <div class="card shadow-lg p-4">
        <div class="row">
            <div class="col-md-6">
                <h4 class="text-primary">@Model.DepartureCity → @Model.ArrivalCity</h4>
                <p><strong>Date:</strong> @Model.Date.ToString("dd MMM yyyy")</p>
                <p><strong>Departure Time:</strong> @Model.DepartureTime.ToString(@"hh\:mm")</p>
                <p><strong>Duration:</strong> @Model.Duration.ToString(@"hh\:mm")</p>
                <p><strong>Arrival Time:</strong> @Model.ArrivalTime.ToString(@"hh\:mm")</p>
            </div>
            <div class="col-md-6">
                <p><strong>Airline Company:</strong> @Model.CompanyName</p>
                <p><strong>Price:</strong> <span class="text-success fw-bold">@Model.Price.ToString("F2") €</span></p>
            </div>
        </div>

        <hr />

        <form asp-action="ConfirmBuyPost" method="post" class="text-center mt-3">
            <input type="hidden" name="flightId" value="@Model.FlightId" />
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

            <button type="submit" class="btn btn-success px-4 me-2">Confirm Purchase</button>

            <a href="@ViewBag.ReturnUrl" class="btn btn-outline-secondary">Cancel</a>
        </form>
    </div>
</div>
