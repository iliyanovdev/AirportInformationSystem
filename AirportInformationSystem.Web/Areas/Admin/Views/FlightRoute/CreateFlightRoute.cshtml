@using AirportInformationSystem.Web.ViewModels.FlightRoute.Admin
@model FlightRouteCreateViewModel
@{
    ViewData["Title"] = "Add New Flight Route";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Add New Flight Route</h2>

    <form asp-action="CreateFlightRoute" method="post">
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="DepartureCityId" class="form-label">Departure City</label>
                <select asp-for="DepartureCityId" asp-items="Model.Cities" class="form-select">
                    <option value="">-- Select Departure City --</option>
                </select>
                <span asp-validation-for="DepartureCityId" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="ArrivalCityId" class="form-label">Arrival City</label>
                <select asp-for="ArrivalCityId" asp-items="Model.Cities" class="form-select">
                    <option value="">-- Select Arrival City --</option>
                </select>
                <span asp-validation-for="ArrivalCityId" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="CompanyId" class="form-label">Company</label>
                <select asp-for="CompanyId" asp-items="Model.Companies" class="form-select">
                    <option value="">-- Select Company --</option>
                </select>
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="AirplaneTypeId" class="form-label">Airplane</label>
                <select asp-for="AirplaneTypeId" asp-items="Model.AirplaneTypes" class="form-select">
                    <option value="">-- Select Airplane --</option>
                </select>
                <span asp-validation-for="AirplaneTypeId" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="DepartureTime" class="form-label">Departure Time</label>
                <input asp-for="DepartureTime" class="form-control" type="time" />
                <span asp-validation-for="DepartureTime" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="FlightDuration" class="form-label">Flight Duration</label>
                <input asp-for="FlightDuration" class="form-control" type="time" />
                <span asp-validation-for="FlightDuration" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Price" class="form-label">Price</label>
                <div class="input-group">
                    <span class="input-group-text">€</span>
                    <input asp-for="Price" class="form-control" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-4 d-flex justify-content-between">
            <a asp-action="ManageFlightRoutes" class="btn btn-outline-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Back
            </a>

            <button type="submit" class="btn btn-success px-4">
                <i class="bi bi-plus-circle me-2"></i> Add Route
            </button>
        </div>
    </form>
</div>