@page
@model LoginModel
@{
    ViewData["Title"] = "Log In";
}

<div class="auth-container">
    <h2>@ViewData["Title"]</h2>
    <p class="text-center text-muted mb-4">
        Enter your credentials to access your account and tickets.
    </p>

    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
            <label asp-for="Input.Email">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="Password" />
            <label asp-for="Input.Password">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input" asp-for="Input.RememberMe" />
            <label class="form-check-label" asp-for="Input.RememberMe">
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>

        <button id="login-submit" type="submit" class="w-100 btn btn-primary btn-lg">Log In</button>

        <div class="mt-3 text-center">
            Don't have an account?
            <a class="no-underline-link" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register now</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
